{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "symfony/console": "5.2.*",
        "symfony/dotenv": "5.2.*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "5.2.*",
        "symfony/http-client": "5.2.*",
        "symfony/yaml": "5.2.*"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.71",
        "friendsofphp/php-cs-fixer": "^2.18"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Musement\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Musement\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "tests": [
            "@cs:php:test"
        ],
        "cs:php:test": [
            "php-cs-fixer fix -v --dry-run --using-cache=no",
            "phpstan analyse -c phpstan.neon --no-progress --memory-limit=-1"
        ],
        "cs:php:fix": "php-cs-fixer fix --using-cache=no",
        "auto-scripts": {
            "cache:clear": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.2.*"
        }
    }
}
